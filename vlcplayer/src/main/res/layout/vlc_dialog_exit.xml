<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black_opacity_seventy">

    <LinearLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/bg_dialog"
        android:elevation="@dimen/dialog_elevation"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_recording_tb_margin"
            android:gravity="center"
            android:paddingStart="@dimen/dialog_recording_lr_padding"
            android:paddingEnd="@dimen/dialog_recording_lr_padding"
            android:text="@string/dialog_really"
            android:textColor="@color/dialog_start_recording_header_text"
            android:textSize="@dimen/dialog_recording_text_size"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dialog_view_lr_margin"
            android:layout_marginTop="@dimen/dialog_view_tb_margin"
            android:layout_marginRight="@dimen/dialog_view_lr_margin"
            android:background="@color/white_opacity_seventy" />


        <TextView
            android:id="@+id/text_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/dialog_are_you_sure_want_to_exit_player"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_bottom_ll_btn_height"
            android:layout_marginTop="@dimen/dialog_bottom_ll_top_margin"
            android:background="@drawable/bg_dialog_bottom"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/btn_yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_bottom_left"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/dialog_yes"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_bottom_btn_text_size" />

            <TextView
                android:id="@+id/btn_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_bottom_right"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/dialog_no"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_bottom_btn_text_size" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>